<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android1:id="@+id/button_mail"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true"
        android1:text="Mail" />

    <Button
        android1:id="@+id/button_SD"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/button_mail"
        android1:layout_below="@+id/button_mail"
        android1:layout_marginTop="16dp"
        android1:text="SD" />

    <Button
        android1:id="@+id/button_cloud"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/button_SD"
        android1:layout_below="@+id/button_SD"
        android1:layout_marginTop="16dp"
        android1:text="Cloud" />

</RelativeLayout>
